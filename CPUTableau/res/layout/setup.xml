<?xml version="1.0" encoding="utf-8"?>
<ScrollView		xmlns:android="http://schemas.android.com/apk/res/android"
    		  	android:layout_width="match_parent"
    			android:layout_height="match_parent"
    			android:orientation="vertical"
    			android:fadeScrollbars="false"
    			android:scrollbarFadeDuration="0" 
    			android:scrollbars="vertical" >
    
	<LinearLayout 	android:layout_width="match_parent"
	    			android:layout_height="wrap_content"
	    			android:orientation="vertical" 
					android:text="@string/options"
	    			android:gravity="left" >
	    
	    <TextView   android:id="@+id/TextView01" 
				    android:layout_marginTop="10dp"
				    android:layout_marginLeft="10dp"
				    android:layout_marginRight="10dp"
				    android:layout_gravity="center"
	        	 	android:layout_height="wrap_content"
					android:textColor="#fff" 
					android:textStyle="bold"
					android:layout_width="wrap_content" 
					android:text="@string/dialog.headline" />
	    		<CheckBox
		    android:id="@+id/cbEnable"
		    android:layout_marginLeft="30dp"
		    android:layout_marginTop="20dp"
		    android:layout_marginRight="20dp" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/dialog.enableoverlay" />
	
		<CheckBox
		    android:id="@+id/cbNotify"
		    android:layout_marginLeft="30dp"
		    android:layout_marginTop="20dp"
		    android:layout_marginRight="20dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	 	    android:text="@string/dialog.enablenotify" />
		
		<CheckBox
		    android:id="@+id/cbDebug"
		    android:layout_marginLeft="30dp"
		    android:layout_marginTop="20dp"
		    android:layout_marginRight="20dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/dialog.enabledebug" />
		
		<TextView
		    android:layout_marginTop="20dp"
		    android:layout_marginLeft="10dp"
		    android:layout_marginRight="10dp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/dialog.accelValue" />
		
		<SeekBar
		    android:id="@+id/sbAccel"
		    android:layout_marginTop="5dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" />
		
		
		<Button
		    android:id="@+id/btOK"
		    android:layout_marginTop="20dp"
		    android:layout_marginBottom="10dp"
		    android:layout_width="wrap_content"
		    android:layout_gravity="center"
		    android:layout_height="wrap_content"
		    android:text="@string/dialog.OK" />
	 
	</LinearLayout>
    
</ScrollView>
